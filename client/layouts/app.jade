template(name='app')
    nav.navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(
                type='button',
                data-toggle='collapse',
                data-target='#navbar',
                aria-expanded='false',
                aria-controls='navbar'
                )
                    span.sr-only {{ i18n 'general.toggle_nav' }}
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="{{ pathFor 'home' }}") {{ i18n 'general.logo' }}
            #navbar.collapse.navbar-collapse
                ul.nav.navbar-nav
                    +userNav
                    with isAdmin
                        +adminNav
                ul.nav.navbar-nav.navbar-right
                    +loginButtons
    .container
        +yield
    .footer
        .container
            p.text-muted Guidep, 2014.
